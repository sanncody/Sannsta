<% include ./partials/header.ejs %>
  <div class="w-full min-h-screen bg-[#2B2B2B] text-white py-5 flex flex-col items-center justify-center">
    <div class="flex flex-col items-center gap-5 px-4">
      <img class="w-1/2" src="/images/logo.png" alt="">
      <form class="w-full" action="/register" method="post">
        <input class="px-3 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-600 font-semibold" type="text"
          placeholder="Username" name="username">
        <input class="px-3 mt-2 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-600 font-semibold" type="email"
          placeholder="Email" name="email">
        <input class="px-3 mt-2 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-600 font-semibold" type="text"
          placeholder="Name" name="name">
        <input class="px-3 mt-2 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-600 font-semibold" type="password"
          placeholder="Password" name="password">
        <input class="w-full bg-blue-500 px-3 py-3 rounded-md mt-2 cursor-pointer hover:scale-[1.01] transition-transform duration-300 ease-in-out" type="submit" value="Make New Account">
      </form>
      <span>Already have an account ? <a href="/login" class="text-blue-500 font-semibold">Log In</a></span>
    </div>
  </div>
  <% include ./partials/footer.ejs %>