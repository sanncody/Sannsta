<% include ./partials/header.ejs %>

  <div class="w-full min-h-screen bg-zinc-900 text-white py-7 mb-10">
    <div class="max-w-3xl mx-auto px-4 md:px-8">
      <!-- Top Bar -->
      <div class="flex justify-between items-center mb-8">
        <a class="text-sm text-blue-500 hover:text-blue-400" href="/profile">
          <i class="ri-arrow-left-s-line"></i> Profile
        </a>
        <h2 class="leading-none text-sm md:text-base font-semibold">Edit Profile</h2>
        <a class="text-sm hover:text-blue-400" href="/feed">
          <i class="ri-home-line"></i> Home
        </a>
      </div>

      <!-- Profile Picture -->
      <div class="flex flex-col items-center gap-3 mt-10">
        <div
          class="image w-[25vw] h-[25vw] md:w-[8vw] md:h-[8vw] bg-sky-100 rounded-full overflow-hidden border border-zinc-700">
          <img src="/images/uploads/<%= user.profileImage %>" alt="profile" class="w-full h-full object-cover">
        </div>
        <button id="edit-btn" class="text-blue-500 capitalize hover:text-blue-400 transition">
          edit picture
        </button>
      </div>

      <!-- Edit Form -->
      <div class="gap-5 px-1 md:px-0 mt-10">
        <h3 class="text-lg md:text-xl leading-none font-semibold">Edit Account Details</h3>
        <hr class="opacity-30 my-3">

        <form class="w-full space-y-3" action="/edit" method="post" id="edit-image" enctype="multipart/form-data">
          <input hidden type="file" name="profilePic">

          <input
            class="px-3 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-900 capitalize outline-none"
            type="text" placeholder="username" name="username" value="<%= user.username %>">

          <input
            class="px-3 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-900 capitalize outline-none"
            type="text" placeholder="name" name="name" value="<%= user.name %>">

          <textarea
            class="px-3 py-2 border-2 border-zinc-800 rounded-md block w-full bg-zinc-900 resize-none outline-none overflow-hidden"
            placeholder="Bio" name="bio"><%= user.bio %></textarea>

          <input
            class="w-full bg-blue-500 hover:bg-blue-600 px-3 py-3 rounded-md cursor-pointer hover:scale-[1.01] transition-transform duration-300 ease-in-out"
            type="submit" value="Update Details">
        </form>
      </div>
    </div>
  </div>

  <script src="/javascripts/script.js"></script>
  <% include ./partials/footer.ejs %>