<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-900 text-white py-5">
        <div class="flex justify-between items-center px-4">
            <a class="text-sm text-blue-500 cursor-pointer" href="/profile"><i class="ri-arrow-left-s-line"></i>
                Profile</a>
            <h2 class="leading-none text-sm">Upload Story</h2>
            <a class="text-sm" href="/feed"><i class="ri-home-line"></i> Home</a>
        </div>
        <div class="flex flex-col items-center gap-2 mt-20">
            <div class="image w-[25vw] h-[25vw] rounded-full border-2 border-zinc-800 flex items-center justify-center">
                <i class="text-5xl font-light ri-image-line"></i>
            </div>
            <button id="selectfile" class="text-blue-500 capitalize">select from device</button>
        </div>
        <form id="uploadstory" action="/story/upload" class="w-full px-6 py-3 mt-10" enctype="multipart/form-data"
            method="post">
            <input hidden type="file" name="story">
            <input class="w-full px-3 py-2 bg-blue-500 rounded-md mt-3" type="submit" value="Upload">
        </form>
    </div>

    <script>
        document.querySelector("#selectfile").addEventListener("click", function () {
            document.querySelector("#uploadstory input").click();
        });
    </script>
    <% include ./partials/footer.ejs %>