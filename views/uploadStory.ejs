<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-900 text-white py-10">
        <div class="max-w-2xl mx-auto px-4 md:px-8">
            <!-- Top Bar -->
            <div class="flex justify-between items-center mb-8">
                <a class="text-sm text-blue-500 cursor-pointer hover:text-blue-400" href="/profile">
                    <i class="ri-arrow-left-s-line"></i> Profile
                </a>
                <h2 class="leading-none text-sm md:text-base font-semibold">Upload Story</h2>
                <a class="text-sm hover:text-blue-400" href="/feed">
                    <i class="ri-home-line"></i> Home
                </a>
            </div>

            <!-- Upload Preview -->
            <div class="flex flex-col items-center gap-4 mt-16">
                <div
                    class="image w-[45vw] h-[45vw] md:w-[15vw] md:h-[15vw] rounded-full border-2 border-zinc-800 flex items-center justify-center">
                    <i class="text-5xl font-light ri-image-line"></i>
                </div>
                <button id="selectfile" class="text-blue-500 capitalize hover:text-blue-400 transition">select from
                    device</button>
            </div>

            <!-- Upload Form -->
            <form id="uploadstory" action="/story/upload" class="w-full px-2 md:px-0 py-3 mt-10"
                enctype="multipart/form-data" method="post">
                <input hidden type="file" name="story">
                <input
                    class="w-full px-3 py-2 bg-blue-500 rounded-md mt-3 hover:bg-blue-600 transition cursor-pointer text-sm md:text-base"
                    type="submit" value="Upload">
            </form>
        </div>
    </div>

    <script>
        document.querySelector("#selectfile").addEventListener("click", function () {
            document.querySelector("#uploadstory input").click();
        });
    </script>

    <% include ./partials/footer.ejs %>