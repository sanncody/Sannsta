<% include ./partials/header.ejs %>

    <div class="relative w-full min-h-screen bg-black flex flex-col items-center justify-center overflow-hidden">

        <!-- Profile Image -->
        <div class="flex items-center justify-center w-full px-3 sm:px-6 md:px-10">
            <div class="w-3/4 max-w-[95%] sm:max-w-[80%] md:max-w-[70%] lg:max-w-[55%] max-h-full rounded-md">
                <img src="data:<%= user.profileImage.contentType %>;base64,<%= user.profileImage.data?.toString('base64') %>"
                    alt="profile-pic"
                    class="w-full object-contain sm:object-cover rounded-xl shadow-lg transition-transform duration-300 hover:scale-[1.01] scroll-Y-none" />
            </div>
        </div>

        <!-- Close Button -->
        <button onclick="window.history.back()"
            class="absolute top-4 right-4 sm:top-6 sm:right-6 text-white text-3xl sm:text-4xl z-20 hover:text-gray-300 transition"
            aria-label="Close">
            <i class="ri-close-line"></i>
        </button>

    </div>

    <% include ./partials/footer.ejs %>